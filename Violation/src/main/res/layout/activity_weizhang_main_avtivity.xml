<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weizhang_main_avtivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zividig.ndk_test.weizhang.activity.ProvinceListActivity">

    <include android:id="@+id/titbar" layout="@layout/layout_title_bar" />
    <ListView
        android:id="@+id/list_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titbar"
        android:padding="8dp"
        android:scrollbars="none"
        />
    <ProgressBar
        android:id="@+id/province_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        />
</RelativeLayout>
