<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/vio_item_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/time"
        android:scaleType="fitXY"
        android:layout_marginTop="8dp"
        android:layout_below="@id/titbar"
        android:layout_marginLeft="5dp"
        />
    <View
        android:layout_below="@+id/vio_item_image"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_toRightOf="@+id/vio_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_below="@id/titbar"
        >
        <TextView
            android:id="@+id/vio_item_time"
            style="@style/violation_item"
            android:text="2016-03-05"
            />
        <TextView
            android:id="@+id/vio_item_place"
            style="@style/violation_item"
            android:text="地点"
            android:textColor="@android:color/holo_blue_light"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/vio_item_reason"
                style="@style/violation_item"
                android:text="机动车违反禁止标线指示的"
                android:maxEms="12"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/csy_arr_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/money"
                android:id="@+id/imageView"/>

            <TextView
                android:id="@+id/vio_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:scaleType="fitXY"
                android:src="@drawable/fen"
                android:layout_marginLeft="50dp"
                />
            <TextView
                android:id="@+id/vio_item_scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>