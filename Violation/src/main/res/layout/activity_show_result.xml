<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/violation_activity_background"
    tools:context="com.zividig.ndk_test.weizhang.activity.ShowResultActivity">

    <include android:id="@+id/titbar" layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间:"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            />
        <TextView
            style="@style/violation_show_result"
            android:id="@+id/asr_tv_time"
            android:text="2016-03-21"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点:"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            />
        <TextView
            style="@style/violation_show_result"
            android:id="@+id/asr_tv_place"
            android:text="深圳"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容:"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            />
        <TextView
            style="@style/violation_show_result"
            android:id="@+id/asr_tv_content"
            android:text="闯红灯"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="罚金:"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            />
        <TextView
            style="@style/violation_show_result"
            android:id="@+id/asr_tv_money"
            android:text="200"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扣分:"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            />
        <TextView
            style="@style/violation_show_result"
            android:id="@+id/asr_tv_scores"
            android:text="10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理:"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            />
        <TextView
            style="@style/violation_show_result"
            android:id="@+id/asr_tv_handle"
            android:text="未处理"
            />
    </LinearLayout>
</LinearLayout>
