<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义的主题样式-->
    <style name="MyAppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash_icon</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <!--所有页面背景-->
    <style name="AllActivityBackground">
        <item name="android:background">#212c34</item>
    </style>
    
    <!--底部导航栏样式-->
    <style name="pagertab_icon_style">
        <item name="android:background">@drawable/tab_bg_normal</item>
        <item name="apTabBackground">@drawable/tab_bg_normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="apTabIndicatorColor">@color/home_bar_text_push</item>
        <item name="apTabUnderlineColor">#1A000000</item>
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">8dp</item>
        <item name="apTabPaddingTopBottom">6dp</item>
        <item name="apTabTextSelectColor">@color/home_bar_text_push</item>
    </style>

    <!--注册和登录相关样式-->
    <style name="RegisterLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/shape_login_edit</item>
    </style>

    <style name="RegisterTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RegisterEditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">8dp</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!-- 车辆信息车门。防盗等按钮样式-->
    <style name="carInfoButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <!--登陆进度条样式-->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_progress_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--灯光颜色-->
    <style name="colorLightYuanStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="colorLightDuiGou">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@mipmap/duigou</item>
    </style>

    <!--添加设备相关样式-->
    <style name="Style_AddDevice_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Style_AddDevice_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/login_btn</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Style_AddDevice_text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--地图信息展示相关样式-->
    <style name="Style_MessageMapShow_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/csy_text</item>
    </style>
</resources>
