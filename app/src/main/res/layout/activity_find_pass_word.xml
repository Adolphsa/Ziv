<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
              android:background="@color/activity_background"
    >
    <include layout="@layout/layout_titlebar"/>

    <LinearLayout
        style="@style/RegisterLinearLayoutStyle"
        >
        <TextView
            android:id="@+id/findPwd_tv_user"
            style="@style/RegisterTextStyle"
            android:text="用户名        "
            />
        <EditText
            android:id="@+id/findPwd_et_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:background="@null"
            android:textStyle="normal"
            android:padding="8dp"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        style="@style/RegisterLinearLayoutStyle"
        >
        <TextView
            android:id="@+id/findPwd_tv_pwd"
            style="@style/RegisterTextStyle"
            android:text="密码            "
            />
        <EditText
            android:id="@+id/findPwd_et_pwd"
            style="@style/RegisterEditTextStyle"
            android:hint="请输入新密码"
            />

    </LinearLayout>

    <LinearLayout
        style="@style/RegisterLinearLayoutStyle"
        >
        <TextView
            android:id="@+id/findPwd_tv_yzm"
            style="@style/RegisterTextStyle"
            android:text="验证码        "
            />
        <EditText
            android:id="@+id/findPwd_et_yzm"
            style="@style/RegisterEditTextStyle"
            android:hint="请输入验证码"
            />

        <Button
            android:id="@+id/findPwd_item_bt"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="获取验证码"
            android:textColor="#00c8ff"
            android:background="@drawable/selector_surface_yzm"
            android:padding="3dp"
            android:layout_marginLeft="15dp"
            android:onClick="getFindPwdYzm"
            />

    </LinearLayout>

    <Button
        android:id="@+id/findPwd_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重置密码"
        android:textColor="@android:color/white"
        android:background="@drawable/login_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:onClick="resetPassword"
        />

</LinearLayout>
