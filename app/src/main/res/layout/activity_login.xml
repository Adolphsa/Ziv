<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/activity_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ziv_touming_150"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <com.zividig.ziv.customView.DropEditText
            android:id="@+id/et_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login_edit"
            android:drawableLeft="@mipmap/user"
            android:hint="请输入账号"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:drawablePadding="70dp"
            />
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_login_edit"
            android:drawableLeft="@mipmap/pwd"
            android:hint="请输入密码"
            android:padding="10dp"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:drawablePadding="70dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >
            <CheckBox
                android:id="@+id/cb_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住用户名"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/white"
                />
            <CheckBox
                android:id="@+id/cb_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="@android:color/white"
            android:layout_marginTop="80dp"
            android:background="@drawable/login_btn"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom|center_horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:background="@android:color/transparent"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:padding="3dp"
            android:textColor="@drawable/selector_login_text_color"
            android:onClick="loginRegister"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="13dp"
            android:background="#dddddd"
            android:layout_marginBottom="15dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="忘记密码"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:padding="3dp"
            android:textColor="@drawable/selector_login_text_color"
            android:onClick="loginFindPassWord"
            />
    </LinearLayout>


</LinearLayout>