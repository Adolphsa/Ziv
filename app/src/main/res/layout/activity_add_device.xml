<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zividig.ziv.function.AddDevice">

    <include layout="@layout/layout_titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/tv_change_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.请扫描二维码"
            android:textSize="17sp"
            android:padding="10dp"
            android:clickable="true"
            android:onClick="changeNetwork"
            android:gravity="center_vertical"
            />
        <Button
            android:id="@+id/bt_set_two_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="二维码扫描"
            android:textColor="@android:color/white"
            android:background="@drawable/login_btn"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.请点击添加设备"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="添加设备"
            android:textColor="@android:color/white"
            android:background="@drawable/login_btn"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:onClick="BindDevice"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备ID: "
            android:textSize="18sp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textSize="18sp"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码: "
            android:textSize="18sp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_two_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textSize="18sp"
            android:padding="5dp"
            />
    </LinearLayout>

</LinearLayout>
