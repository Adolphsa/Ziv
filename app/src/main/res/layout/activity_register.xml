<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/register_tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名        "
            android:textSize="18sp"
            android:padding="8dp"
            />
        <EditText
            android:id="@+id/register_et_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:background="@null"
            android:textStyle="normal"
            android:padding="8dp"
            android:inputType="number"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/register_tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码            "
            android:textSize="18sp"
            android:padding="8dp"
            />
        <EditText
            android:id="@+id/register_et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:background="@null"
            android:textStyle="normal"
            android:padding="8dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/register_tv_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码        "
            android:textSize="18sp"
            android:padding="8dp"
            />
        <EditText
            android:id="@+id/register_et_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:background="@null"
            android:textStyle="normal"
            android:padding="8dp"
            android:inputType="number"
            />

        <Button
            android:id="@+id/register_item_bt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="获取验证码"
            android:textColor="#00c8ff"
            android:background="@drawable/selector_surface_yzm"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:onClick="getRegisterYzm"
            />

    </LinearLayout>

    <Button
        android:id="@+id/register_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="@android:color/white"
        android:background="@drawable/login_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        />

</LinearLayout>
