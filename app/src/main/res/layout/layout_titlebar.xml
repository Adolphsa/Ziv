<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title"
    android:background="@color/title_bar_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/selector_back_button"
        android:background="@null"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:text="返回"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="14.0sp"
        />
    <TextView
        android:id="@+id/tv_device_states"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备状态:"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_device_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_device_states"
        android:text="正在查询"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/bt_add_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加设备"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:visibility="gone"
        />
</RelativeLayout>